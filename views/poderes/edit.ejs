<%-include('../cabecalho.ejs')%>
  <header>
    <h3>Editar Poder</h3>
  </header>
  <div class="content">
    <form id="form-poder" autocomplete="off" action="/poderes/edit/ok" method="post">

      <input type="hidden" name="id" value="<%= poder._id %>">

      <div class="grid">
        <div>
          <label for="nome">Nome do Poder</label>
          <input id="nome" name="nome" type="text" value="<%= poder.nome %>" required>
        </div>

        <div>
          <label for="usuario">Usuário</label>
          <input id="usuario" name="usuario" type="text" value="<%= poder.usuario %>">
        </div>
      </div>

      <footer>
        <a type="button" class="btn ghost" id="btn-cancelar" href="/poderes/lst">Cancelar</a>
        <button type="submit" class="btn primary">Salvar Alterações</button>
      </footer>
    </form>
  </div>
<%-include('../rodape.ejs')%>
