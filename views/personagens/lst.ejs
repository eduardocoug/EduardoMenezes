<%-include('.. /cabecalho.ejs')%>
  <section class="section">
    <div style="display:flex; align-items:end; justify-content:space-between; gap:16px; flex-wrap:wrap;">
      <div>
        <h2>Personagens</h2>
        <p>Gerencie a Lista de Personagens</p>
      </div>
      <div class="actions">
        <a href="/personagens/add" class="btn primary">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 5a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H6a1 1 0 110-2h5V6a1 1 0 011-1z" />
          </svg>
          Adicionar Personagem
        </a>
      </div>
    </div>

    <div class="table-wrap" style="margin-top:14px;">
      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Afiliação</th>
            <th>Primeira Aparição(ano)</th>
            <th>Foto</th>
            <th class="actions-cell">Ações</th>
          </tr>
        </thead>


        <%personagens.forEach(personagem=>{%>
          <tbody>
            <tr>
              <td>
                <%=personagem.nome%>
              </td>
              <td>
                <%=personagem.tipo%>
              </td>
              <td>
                <%=personagem.afiliacao%>
              </td>
              <td>
                <%=personagem.primeira_aparicao%>
              </td>
              <td>
                <% if(personagem.foto) { %><img src="<%=personagem.foto%>" alt="<%=personagem.nome%>"
                    style="max-width: 100px; max-height: 100px;">
                  <% } %>
              </td>
              <td class="actions-cell">
                <a href="/personagens/edit/<%=personagem.id%>" class="icon-btn" title="Editar" aria-label="Editar">
                  <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 20h9" />
                    <path d="M16.5 3.5a2.121 2.121 0 013 3L7 19l-4 1 1-4 12.5-12.5z" />
                  </svg>
                </a>
                <a href="/personagens/del/<%=personagem.id%>" class="icon-btn" title="Excluir" aria-label="Excluir">
                  <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="3 6 5 6 21 6" />
                    <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6" />
                    <path d="M10 11v6" />
                    <path d="M14 11v6" />
                    <path d="M9 6V4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v2" />
                  </svg>
                </a>
              </td>
            </tr>
            <%})%>
          </tbody>
      </table>
    </div>
  </section>

  <%-include('.. /rodape.ejs')%>