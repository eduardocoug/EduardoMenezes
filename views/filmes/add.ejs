<%-include('../cabecalho.ejs')%>
  <header>
    <h3>Adicionar Novo Filme</h3>
  </header>
  <div class="content">
    <form id="form-instrumento" autocomplete="off" action="/filmes/add/ok" method="post">
      <div class="grid">
        <div>
          <label for="nome">Nome do Filme</label>
          <input id="nome" name="nome" type="text" placeholder="Ex: Capitã Marvel" required>
        </div>

        <div>
          <label for="ano">Ano</label>
          <input id="ano" name="ano" type="number" placeholder="Ex: 2018" required>
          
        </div>



        <div>
          <label for="classificacao">Classificação</label>
          <select id="classificacao" name="classificacao" required>
            <option value="" disabled selected>Selecione a Classificação</option>
            <option>12</option>
            <option>14</option>
            <option>16</option>
            <option>18</option>
          </select>
        </div>

        <footer>
          <a type="button" class="btn ghost" id="btn-cancelar" href="/filmes/lst">Cancelar</a>
          <button type="submit" class="btn primary">Adicionar Filme</button>
        </footer>
    </form>
  </div>